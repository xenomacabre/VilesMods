<ThingDef ParentName="RFF_TerraformBasicBase">	 
	<defName>Terraform_GatherNutrientsFromRichSoil</defName>
	<label>nutrients from rich soil</label>
	<description>+4 Clay\n +4 Silt\n +6 Compost\n +6 Fertilizer\n +2 Peat</description>
	<uiIconPath>UI/Icons/Terraforming/UndevelopedSoil</uiIconPath>
	<modExtensions>
		<li Class="FertileFields.Terrain">
			<above>
				<li>SoilRich</li>
			</above>
			<result>RockySoil</result>
			<products>
				<SoftClay>8</SoftClay>
				<Dirt>8</Dirt>
				<Compost>12</Compost>
				<Fertilizer>6</Fertilizer>
				<Peat>2</Peat>
			</products>
		</li>
	</modExtensions>
	<costList>		
	</costList>
	<statBases>
		<WorkToBuild>960</WorkToBuild>
	</statBases>
	<terrainAffordanceNeeded>Diggable</terrainAffordanceNeeded>
</ThingDef>	 
	
