<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef>
		<defName>BuildMagneticMaterial</defName>
		<label>Synthesize piezoelectric material x5</label>
		<description>Synthesize material which can accumulate extreme electrical charge. Produces 5.</description>
		<jobString>Synthesizing magnetic material.</jobString>
		<workAmount>2400</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<recipeUsers>
			<li>RobAssem</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Carbon</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Zinc</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Quartz</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<products>
			<MagneticMaterial>5</MagneticMaterial>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Zinc</li>
				<li>Quartz</li>
				<li>NanotechFramework</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>18</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
        <researchPrerequisite>Components_D3</researchPrerequisite>
	</RecipeDef>
	
