		<jobString>Extracting sulfur.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Anglesite</li>
						<li>Sphalerite</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Anglesite</li>
				<li>Sphalerite</li>
			</thingDefs>  
		</fixedIngredientFilter>
		<products>
			<Sulfur>15</Sulfur>
		</products>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
	
	<!-- Halite -->
	<RecipeDef>
		<defName>ExtractSalt</defName>
		<label>Extract Salt (x20)</label>
		<description>Sodium chloride can often be found in Mudstone and Limestone in the form of halite. Not as efficient as mining it directly.</description>
		<jobString>Extracting Salt.</jobString>
		<workSpeedStat>StonecuttingSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>2500</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ZF_ChunkMudstone</li>
						<li>ChunkLimestone</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ZF_ChunkMudstone</li>
				<li>ChunkLimestone</li>
			</thingDefs>  
		</fixedIngredientFilter>
		<products>
			<Salt>20</Salt>
		</products>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
</Defs>
