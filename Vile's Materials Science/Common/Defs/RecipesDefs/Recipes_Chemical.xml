<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<RecipeDef>
		<defName>MakeChlorine</defName>
		<label>Synthesize chlorine and lye</label>
		<description>Chlorine and sodium hydroxide (lye) is created from sodium chloride through electrolysis.</description>
		<jobString>Synthesizing Chlorine and lye.</jobString>
		<workAmount>900</workAmount>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Salt</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Chlorine>10</Chlorine>
			<Lye>10</Lye>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Salt</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>MakePTFE</defName>
		<label>Make Teflon</label>
		<description>Teflon, or PTFE, is a thermoplastic with extremely high corrosion and chemical resistance, friction resistance, and is hydrophobic. Its applications include hazmat gear, as a biomaterial, and lubricant for certain machines. It's highly toxic so best not to use it to coat your pans. Made by polymerizing a compound made from chloroform, hydrofluoric acid, and calcium fluoride.</description>		
		<jobString>Making Teflon.</jobString>
		<workAmount>1800</workAmount>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chlorine</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<!-- <li>FluxPowder</li>-->
						<li>CrushedStone</li>
						<!-- This should become fluorite -->
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulfur</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<products>
			<Paraffins>10</Paraffins>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Salt</li>
				<li>FluxPowder</li>
				<li>Sulfur</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>9</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C2</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>MakeCelluloseCotton</defName>
		<label>Extract cellulose from cotton or hemp (x20)</label>
		<description>Extract cellulose for making ammo propellant or rayon fabric. Quick and efficient.</description>
		<jobString>Extracting cellulose.</jobString>
		<workAmount>900</workAmount>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCotton</li>
						<li>SmokeleafLeaves</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Cellulose>20</Cellulose>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCotton</li>
				<li>SmokeleafLeaves</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
	<RecipeDef>
		<defName>MakeCelluloseWood</defName>
		<label>Extract cellulose from wood (x15)</label>
		<description>Extract cellulose for making ammo propellant or rayon fabric. Slow and inefficient.</description>
		<jobString>Extracting cellulose.</jobString>
		<workAmount>1200</workAmount>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Kindling</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<products>
			<Cellulose>15</Cellulose>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Kindling</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
	
	<RecipeDef>
		<defName>MakeNitrocellulose</defName>
		<label>Make nitrocellulose propellant (x20)</label>
		<description>Originally known as guncotton, it's a smokeless propellant which is useful for crafting ammo. Produces 20.</description>
		<jobString>Making nitrocellulose propellant.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>3000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nitre</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Cellulose</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Sulfur</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nitre</li>
				<li>Sulfur</li>
				<li>Cellulose</li>
			</thingDefs>  
		</fixedIngredientFilter>
		<products>
			<Powder>20</Powder>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Machining</researchPrerequisite>
	</RecipeDef>
	
	
	
	<!-- Plant Wax - replaces paraffins for candles -->
	<RecipeDef>
		<defName>MakePlantWax</defName>
		<label>Make plant wax (x15)</label>
		<description>Make plant wax. Useful for candles. Produces 15.</description>
		<jobString>Making plant wax.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>1000</workAmount>
		<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawCoconut</li>
						<li>Rawbean</li>
					</thingDefs>
				</filter>
				<count>1.5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawCoconut</li>
				<li>Rawbean</li>
			</thingDefs>  
		</fixedIngredientFilter>
		<products>
			<PlantWax>15</PlantWax>
		</products>
		<skillRequirements>
			<Crafting>2</Crafting>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<researchPrerequisite>Chemistry_C0</researchPrerequisite>
	</RecipeDef>
	
	<!-- Sulfur -->
	<RecipeDef>
		<defName>ExtractSulfur</defName>
