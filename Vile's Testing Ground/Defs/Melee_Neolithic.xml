	<!-- =========================== Pilum - a heavy javelin ================================ -->
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseWeaponAndAmmoNeolithic"> <!-- ParentName="WeaponNeoliticBase">-->
		<defName>TruePilum</defName>
		<label>Pilum</label>
		<description>TYPE: 1H Anti-Armor Javelin
TIER: Neolithic
+ Excellent penetration
- Somewhat cumbersome 

A heavy javelin with a long, weighted spearhead meant for penetrating armor. Works well as a melee weapon, too. NOTE: Can only be cast manually.</description>
		<graphicData>
			<texPath>Things/Weapons/Melee/TruePilum</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.2,1.2</drawSize>
		</graphicData>
		<weaponTags>
			<li>NeolithicRanged</li>
			<li>CE_Pila</li>
			<li>CE_OneHandedWeapon</li>
		</weaponTags>
		<tradeability>Sellable</tradeability>
		<stuffCategories>
			<li>StrongMetallic</li>
		</stuffCategories>
		<costStuffCount>35</costStuffCount>
		<costList>
			<ComponentMedieval>2</ComponentMedieval>
			<WoodLog>35</WoodLog>
		</costList>
		<statBases>
			<WorkToMake>3300</WorkToMake>
			<Bulk>7</Bulk>
			<Mass>2.2</Mass>
			<MeleeCounterParryBonus>0.7</MeleeCounterParryBonus>	
			<SightsEfficiency>0.75</SightsEfficiency>
			<ShotSpread>1.1</ShotSpread>
			<SwayFactor>1.25</SwayFactor>
			<RangedWeapon_Cooldown>1.4</RangedWeapon_Cooldown>
		</statBases>
		<equippedAngleOffset>-25</equippedAngleOffset>
		<stackLimit>1</stackLimit>
		<equippedStatOffsets>
			<MeleeCritChance>0.3</MeleeCritChance>
			<MeleeParryChance>0.35</MeleeParryChance>
			<MeleeDodgeChance>0.5</MeleeDodgeChance>
		</equippedStatOffsets>
		<verbs>
			<li Class="CombatExtended.VerbPropertiesCE">
				<verbClass>CombatExtended.Verb_ShootCEOneUse</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>TruePilum_Thrown</defaultProjectile>
				<warmupTime>0.8</warmupTime>
				<range>8</range>
				<onlyManualCast>true</onlyManualCast>
			</li>
		</verbs>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<!--<id>shaftblunt</id>-->
				<label>shaft</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>1.2</cooldownTime>
				<chanceFactor>0.3</chanceFactor>
				<armorPenetrationBlunt>8</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Shaft</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>head</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>11</power>
				<cooldownTime>1.6</cooldownTime>
				<chanceFactor>1</chanceFactor>
				<armorPenetrationBlunt>4</armorPenetrationBlunt>
				<armorPenetrationSharp>3</armorPenetrationSharp>
				<linkedBodyPartsGroup>Head</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>butt</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>9</power>
				<cooldownTime>1.2</cooldownTime>
				<chanceFactor>0.3</chanceFactor>
				<armorPenetrationBlunt>6</armorPenetrationBlunt>
				<armorPenetrationSharp>2</armorPenetrationSharp>
				<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
			</li>
		</tools>
		<recipeMaker>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<!--<researchPrerequisite>LongBlades</researchPrerequisite>-->
		</recipeMaker>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension">
				<DrawSize>1.5,1.5</DrawSize>
			</li>
		</modExtensions>
		<weaponClasses>
			<li>MeleePiercer</li>
			<li>Neolithic</li>
		</weaponClasses>
		<thingCategories>
			<li>SharpMelee</li>
		</thingCategories>
	</ThingDef>


