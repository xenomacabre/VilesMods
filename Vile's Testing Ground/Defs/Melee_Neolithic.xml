		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>18</damageAmountBase> <!-- was 22-->
			<speed>23</speed><!-- was 18 -->
			<!-- <armorPenetrationBase>0.35</armorPenetrationBase> -->
