<?xml version="1.0" encoding="UTF-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	<mods>
		<li>Core SK</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>

		<li Class="PatchOperationReplace">
			<xpath>Defs/TraitDef[defName="Gay" or defName="Bisexual"]/commonality</xpath>
			<value>
   				 <commonality>3.0</commonality>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>Defs/TraitDef[defName="Asexual"]/commonality</xpath>
			<value>
   				 <commonality>1.5</commonality>
			</value>
		</li>

		<li Class="PatchOperationAdd">
			<xpath>Defs/TraitDef[defName="Rockhound"]/degreeDatas/li/statOffsets</xpath>
			<value>
   				 <StonecuttingSpeed>0.4</StonecuttingSpeed>
			</value>
		</li>
		</operations>
		</match>
    </Operation>	
</Patch>	
