<Defs>
<!-- LIGHT LEATHER -->
	<RecipeDef>
		<defName>Make_LeatherThermatan</defName>
		<label>make thermatan leather x25</label>
		<description>Make an ultra-grade variety of leather with exceptional strength, beauty, and insulation by infusing heavy leathers with esters extracted from dragon blood.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Leather_Elephant</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DragonEsters</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Leather_Elephant</li>
				<li>DragonEsters</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Leather_KirinHide>25</Leather_KirinHide>
		</products>
		<recipeUsers>
			<li>TableLoom</li>
		</recipeUsers>
		 <researchPrerequisite>Repair_table_B1</researchPrerequisite>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workAmount>600</workAmount>
	</RecipeDef>

