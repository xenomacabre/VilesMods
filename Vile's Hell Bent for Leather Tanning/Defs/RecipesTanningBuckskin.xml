<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- LIGHT LEATHER -->
	<RecipeDef>
		<defName>TanBrain_LeatherBuckskin</defName>
		<label>brain-tan buckskin x10</label>
		<description>Tan raw hides into simple buckskin leather using a solution made with animal brains.</description>
		<uiIconThing>Leather_Dog</uiIconThing>
        <jobString>Brain-tanning buckskin.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>UncuredHides</li>
						<li>CuredHides</li>	
					</categories>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
						<li>UncuredHides</li>
						<li>CuredHides</li>	
					</categories>
		</fixedIngredientFilter>
		<products>
			<Leather_Dog>10</Leather_Dog>
		</products>
		<recipeUsers>
			<li>Campfire</li>
			<li MayRequire="vitech.metallurgy">FirePit</li>
		</recipeUsers>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workAmount>800</workAmount>
	</RecipeDef>
	
	<RecipeDef>
		<defName>TanBrain_FurTanned</defName>
		<label>brain-tan fur x10</label>
		<description>Tan raw furs into simple tanned fur using a solution made with animal brains.</description>
		<uiIconThing>Leather_Dog</uiIconThing>
         <jobString>Brain-tanning fur.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Hide_HeavyFurPeltCured</li>
						<li>Hide_HeavyFurPelt</li>	
						<li>Hide_RichFurPeltCured</li>
						<li>Hide_RichFurPelt</li>
						<li>Hide_RuggedFurPeltCured</li>
						<li>Hide_RuggedFurPelt</li>
						<li>Hide_WarmFurPeltCured</li>
						<li>Hide_WarmFurPelt</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Hide_HeavyFurPeltCured</li>
				<li>Hide_HeavyFurPelt</li>	
				<li>Hide_RichFurPeltCured</li>
				<li>Hide_RichFurPelt</li>
				<li>Hide_RuggedFurPeltCured</li>
				<li>Hide_RuggedFurPelt</li>
				<li>Hide_WarmFurPeltCured</li>
				<li>Hide_WarmFurPelt</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<TannedFur>10</TannedFur>
		</products>
		<recipeUsers>
			<li>Campfire</li>
			<li MayRequire="vitech.metallurgy">FirePit</li>
		</recipeUsers>
		<workSpeedStat>TailoringSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workAmount>800</workAmount>
	</RecipeDef>
	
</Defs>