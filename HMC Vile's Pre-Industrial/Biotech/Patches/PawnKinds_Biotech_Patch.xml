		<xpath>Defs/PawnKindDef[defName="Town_Guard_Pig"]/weaponTags/li[text()="ShortShots"]</xpath>
		<value>
			<li>Musket</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="Town_Trader_Pig"]/weaponTags</xpath>
		<value>
			<weaponTags Inherit="False">
			  <li>Musket</li>
			</weaponTags>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="Mercenary_Gunner_Pig"]/weaponTags/li[text()="Gun"]</xpath>
		<value>
			  <li>Musket</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="Mercenary_Gunner_Pig"]</xpath>
		<value>
			<skills>
				<li>
					<skill>Shooting</skill>
					<range>3~20</range>
				</li>
			</skills>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="Mercenary_Elite_Pig"]/weaponTags/li[text()="Gun"]</xpath>
		<value>
			  <li>Musket</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/PawnKindDef[defName="Mercenary_Elite_Pig"]</xpath>
		<value>
			<skills>
				<li>
					<skill>Shooting</skill>
					<range>6~20</range>
				</li>
			</skills>
		</value>
	</Operation>

</Patch>	