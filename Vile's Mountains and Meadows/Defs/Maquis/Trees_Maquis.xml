<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="TreewoodBase">
		<defName>Plant_TreeStonePine</defName>
		<label>stonepine tree</label>
		<description>Also called "umbrella pine", this variety grows in stony Mediterranean regions.</description>
		<graphicData>
			<texPath>Things/Trees/TreeStonePine</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>7</Beauty>
			<BeautyOutdoors>7</BeautyOutdoors>
			<Nutrition>1.25</Nutrition>
		</statBases>
		<plant>
			<visualSizeRange>
				<min>1.4</min>
				<max>3.0</max>
			</visualSizeRange>
			<fertilityMin>0.65</fertilityMin>
			<harvestedThingDef>StonePineLog</harvestedThingDef>
			<growDays>22</growDays>
			<harvestWork>800</harvestWork>
			<harvestYield>9</harvestYield>
			<sowMinSkill>8</sowMinSkill>
			<wildClusterRadius>6</wildClusterRadius>
			<wildClusterWeight>50</wildClusterWeight>
			<sowResearchPrerequisites>
				<li>Trees_B3</li>
			</sowResearchPrerequisites>
			<!-- <pollutedGraphicPath>Things/Plant/TreePine_Polluted</pollutedGraphicPath> -->
		</plant>
		<modExtensions>
			<li Class="SK.ExtendedPlantGraphic">
				<hasSnowyGraphic>true</hasSnowyGraphic>
			</li>
		</modExtensions>
	</ThingDef>
	
	
<ThingDef ParentName="FirewoodBase">
	<defName>Firewood_StonePine</defName>
	<label>stonepine firewood</label>
	<graphicData>
			<color>(194, 142, 74)</color>
	</graphicData>
	<description>Green firewood used for fuel. 
Green burn rate: 1.1 hrs
Seasoned burn rate: 1.6 hrs</description>
	<statBases>
		<BurnDurationHours>1.1</BurnDurationHours>
	</statBases>

	<recipeMaker>
			<workAmount>250</workAmount>
	</recipeMaker>
	<costList>
		<StonePineLog>3</StonePineLog>
	</costList>
</ThingDef>	
