	<ThingDef ParentName="WallBase" Name="InteriorWall">
		<defName>InteriorWall</defName>
		<label>Interior Wall</label>
		<description>An interior with very little structural integrity. The cement backerboard is flame retardant, however.</description>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<texPath>Things/Building/Walls/Wall_Atlas_DryWall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/Walls/interior_wall_icon</uiIconPath>
		<building>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
		</building>
		<statBases>
			<MaxHitPoints>160</MaxHitPoints>
			<WorkToBuild>120</WorkToBuild>
			<Flammability>0.2</Flammability>
			<Beauty>1</Beauty>
			<Cleanliness>0.2</Cleanliness>
		</statBases>
		<coversFloor>true</coversFloor>
		<tickerType>Never</tickerType>
		<stuffCategories>
			<li>SoftwoodLumber</li>
			<li>HardwoodLumber</li>
