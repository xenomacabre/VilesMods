<Defs>
	
	<RecipeDef Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>blisterSteel_process</defName>
		<label>Make blister steel (x40)</label>
		<description>Make blister steel - an intermediate product used to make crucible steel and forge-welded steel. Takes 2 days.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WroughtIron</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Charcoal</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WroughtIron</li>
				<li>Charcoal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BlisterSteel>40</BlisterSteel>
		</products>
		<usesTemperature>false</usesTemperature>
		<processDays>2.0</processDays>
		<recipeUsers>
			<li>CementationFurnace</li>
		</recipeUsers>
	</RecipeDef>
	
