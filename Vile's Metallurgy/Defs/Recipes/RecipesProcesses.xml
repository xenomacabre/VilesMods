<RecipeDef Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>wootz_process</defName>
		<label>make traditional wootz steel (x60)</label>
		<description>Prepare and fire a crucible to produce wootz steel using organic matter as the carbon source. Takes 3 days.</description>
		<ingredients>
				<li>
				<filter>
					<thingDefs>
						<li>WroughtIron</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ClayPotWetUnglazed</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Kindling</li>
					</thingDefs>
				</filter>
