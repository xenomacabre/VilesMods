<RecipeDef Class="UniversalFermenterSK.RecipeDef_UF">
		<defName>MakeActivatedCarbon_Process</defName>
		<label>Make activated carbon (x20)</label>
		<description>Make activated carbon pills from coal. Produces 20. Takes 12 hours.</description>
		<jobString>Making sctivated carbon</jobString>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Charcoal</li>
