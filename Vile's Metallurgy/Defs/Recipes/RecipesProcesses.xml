				<li>Kindling</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<WootzSteel>60</WootzSteel>
		</products>
		<researchPrerequisite>Steel_B1</researchPrerequisite>
		<usesTemperature>false</usesTemperature>
		<processDays>3</processDays>
		<slotsRequired>2</slotsRequired>
		<recipeUsers>
			<li>Kiln</li>
			<!--<li>CementationFurnace</li>-->
		</recipeUsers>	
	</RecipeDef>
	
