<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="WeatheredOre" Class="Minerals.ThingDef_StaticMineral">
		<defName>WeatheredOreSilverNative</defName>
		<label>Weathered Native Silver Deposits</label>
		<description>A deposit of native silver. Technically not an ore, due to the low reactivity of silver it is often found in chunks in its pure metallic form. Rarer than native gold as silver is more reactive than gold.</description>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
			<texPath>Things/Ore/WeatheredOre</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<drawSize>(1.5,1.5)</drawSize>
			<color>(105,95,97)</color>
			<colorTwo>(147,144,134)</colorTwo>
		</graphicData>
		<randomlyDropResources>
			<li>
				<ResourceDefName>SilverNative</ResourceDefName>
				<DropProbability>5</DropProbability>
				<CountPerDrop>50</CountPerDrop>
			</li>
		</randomlyDropResources>
		<building>
			<mineableThing>SilverNative</mineableThing>
		</building>
		<ThingsToReplace>
			<li>MineableSilverNative</li>
		</ThingsToReplace>
		<mineSpeedFactor>0.5</mineSpeedFactor>	<!-- How easy it is to mine -->
	</ThingDef>

