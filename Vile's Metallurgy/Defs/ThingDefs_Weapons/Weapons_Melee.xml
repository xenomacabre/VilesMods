<Defs>
	
	<ThingDef ParentName="BaseTool">
		<defName>Tool_ChefKnife</defName>
		<label>Chef Knife</label>
		<description>A sharp blade made for chopping food ingredients, but you can stab people with it too.</description>
		<thingClass>SurvivalToolsLite.SurvivalTool</thingClass>
		<graphicData>
			<texPath>Things/Weapons/ChefKnife</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<statBases>
			<WorkToMake>5000</WorkToMake>
			<Mass>0.5</Mass>
			<Bulk>0.5</Bulk>
			<MeleeCounterParryBonus>0.2</MeleeCounterParryBonus>
			<ToolEffectivenessFactor>1</ToolEffectivenessFactor>
		</statBases>
		<equippedAngleOffset>200</equippedAngleOffset>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>handle</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>6</power>
				<cooldownTime>1.3</cooldownTime>
				<chanceFactor>0.3</chanceFactor>
				<armorPenetrationBlunt>3</armorPenetrationBlunt>				
				<linkedBodyPartsGroup>Handle</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>point</label>
				<capacities>
					<li>Stab</li>
				</capacities>
				<power>8</power>
				<cooldownTime>1.4</cooldownTime>
				<chanceFactor>1.33</chanceFactor>
				<armorPenetrationBlunt>0.5</armorPenetrationBlunt>
				<armorPenetrationSharp>3.0</armorPenetrationSharp>
				<linkedBodyPartsGroup>Point</linkedBodyPartsGroup>
			</li>
		</tools>
		<!--<equippedStatOffsets>
			<FoodPoisonChance>-0.5</FoodPoisonChance>
		</equippedStatOffsets>-->
		<thingCategories>
			<li>SurvivalToolsNeolithic</li>
		</thingCategories>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<researchPrerequisite>LongBlades</researchPrerequisite>
		</recipeMaker>
		<stuffCategories>
			<li>StrongMetallic</li>
		</stuffCategories>
		<costStuffCount>25</costStuffCount>
		<modExtensions>
<!-- 			<li Class="RightToolForJob.EquipRightToolExtension">
				<purpose>Harvesing</purpose>
			</li> -->
			<li Class="SurvivalToolsLite.SurvivalToolProperties">
				<baseWorkStatFactors>
					<CookSpeed>1.3</CookSpeed>
					<ButcheryFleshSpeed>1.2</ButcheryFleshSpeed>
					<ButcheryFleshEfficiency>1</ButcheryFleshEfficiency>
				</baseWorkStatFactors>
				<defaultSurvivalToolAssignmentTags>
					<li>Cook</li>
				</defaultSurvivalToolAssignmentTags>
			</li>
		</modExtensions>
		
	</ThingDef>
	
