					<apparelStuffFilter>
						<categories>
							<li>Leathers</li>
						</categories>
						<thingDefs>
							<li>Flaxcloth</li>
							<li>WoolDromedary</li>
							<li>WoolAlpaca</li>
							<li>WoolSheep</li>
							<li>Bronze</li>
							<li>WroughtIron</li>
							<li>ForgedSteel</li>
