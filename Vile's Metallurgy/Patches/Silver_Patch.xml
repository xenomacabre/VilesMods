<?xml version="1.0" encoding="UTF-8"?><Patch>	<!-- Maybe it would be better to split the patches up into multiple files or segment it differently so there's less overall patch classes -->	<!-- =Item labels= -->	<Operation Class="PatchOperationFindMod"> <mods> <li>Core SK</li> </mods>		<match Class="PatchOperationReplace">			<xpath>Defs/ThingDef[defName="Silver"]/label</xpath>			<value>				<label>Silver Coins</label>			</value>		</match>	</Operation>		<!-- =Item Descriptions= -->	<Operation Class="PatchOperationFindMod"> <mods> <li>Core SK</li> </mods>		<match Class="PatchOperationReplace">			<xpath>Defs/ThingDef[defName="Silver"]/description</xpath>			<value>				<description>Sterling silver that has been pressed into coins. These are the standard currency for trade across the Rim due to the rarity of silver, and gold being far too rare for domestic trade.</description>			</value>		</match>	</Operation>		<!-- =Recipes= -->		<!-- Core_SK -->		<Operation Class="PatchOperationFindMod"> <mods> <li>Core SK</li> </mods>			<match Class="PatchOperationSequence">				<operations>					<li Class="PatchOperationReplace">						<xpath>Defs/RecipeDef[defName="ConvertToSilver"]/label</xpath>						<value>							<label>Convert to native silver</label>						</value>					</li>										<li Class="PatchOperationReplace">						<xpath>Defs/RecipeDef[defName="ConvertToSilver"]/description</xpath>						<value>							<description>Convert inorganic matter into raw silver. Produces 30.</description>						</value>					</li>									<li Class="PatchOperationReplace">						<xpath>Defs/RecipeDef[defName="ConvertToSilver"]/products/Silver</xpath>						<value>							<SilverNative>30</SilverNative>						</value>					</li>										<li Class="PatchOperationReplace">						<xpath>Defs/ThingDef[defName="InstinctOptimizingNanobots"]/costList/Silver</xpath>						<value>							<SilverBar>5</SilverBar>						</value>					</li>										<li Class="PatchOperationReplace">						<xpath>Defs/ThingDef[defName="ElectricTreePot"]/costList/Silver</xpath>						<value>							<SilverBar>10</SilverBar>						</value>					</li>				</operations>			</match>		</Operation>			<!-- RatkinRaceHSK -->		<Operation Class="PatchOperationFindMod"> <mods> <li>NewRatkinPlus</li> </mods>			<match Class="PatchOperationReplace">				<xpath>Defs/ThingDef[defName="RK_TwoHanded"]/costList/Silver</xpath>				<value>					<SilverBar>15</SilverBar>				</value>			</match>		</Operation>		<!-- =Recipe Removal= -->	<Operation Class="PatchOperationFindMod"> <mods> <li>Core SK</li> </mods>		<match Class="PatchOperationRemove">			<xpath>			Defs/RecipeDef[defName="MakeSilverBars_Hand" or 			defName="MakeSilverBars_Electric"]</xpath>		</match>	</Operation></Patch>